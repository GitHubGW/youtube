extends ../layout.pug

block content 
  h1 join

  h3 #{errorMessage}

  form(method="POST")
    input(name="username" type="text" placeholder="유저명" required)
    input(name="email" type="text" placeholder="이메일" required)
    input(name="password" type="password" placeholder="비밀번호" required)
    input(name="confirmPassword" type="password" placeholder="비밀번호 확인" required)
    input(type="submit" value="회원가입")