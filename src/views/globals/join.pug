extends ../layout.pug

block content 
  .form-container
    include ../components/youtube.pug

    form(method="POST")
      .form__input
        input(name="username" type="text" placeholder="이름" required)
        i.fa.fa-user
      .form__input
        input(name="email" type="email" placeholder="이메일" required)
        i.fa.fa-envelope
      .form__input
        input(name="password" type="password" placeholder="비밀번호" required)
        i.fas.fa-unlock
      .form__input
        input(name="confirmPassword" type="password" placeholder="비밀번호 확인" required)
        i.fas.fa-lock
      input(type="submit" value="회원가입")
    include ../components/socialLogin
    include ../components/errorMessage.pug