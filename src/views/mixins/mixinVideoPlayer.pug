mixin mixinVideoPlayer(video={})
  .videoPlayer#jsVideoPlayer
    video(src=`/${video.videoUrl}`, controls=false) 
    .videoPlayer__controls 

      .videoPlayer__columns
        span#jsPlayButton
          i.fas.fa-play

      .videoPlayer__columns
        input(class="videoPlayer__range" id="jsTimeRange" type="range" min="0" max="1" step="0.001" value="0")
        span
          span#currentTime 00:00:00 
          span / 
          span#totalTime 00:00:00 

      .videoPlayer__columns.videoPlayer__volume__container
        input(class="videoPlayer__volume" id="jsVolume" type="range" min="0" max="1" step="0.01" value="0.6")
        span#jsVolumeButton
          i.fas.fa-volume-up

      .videoPlayer__columns
        span#jsFullScreen
          i.fas.fa-expand