mixin mixinVideo(video)
  .videoBlock
    a(href=`/videos/${video.id}`)
      video(class="videoBlock__thumbnail" id="jsThumbnailVideo" src=`/${video.videoUrl}` poster=`/${video.thumbnailUrl}` controls=false muted="muted" crossorigin)
      .videoBlock__thumbnail__content 
        .videoBlock__thumbnail__image
          if video.user.avatarUrl
            img(src=video.user.avatarUrl crossorigin)
          else 
            img(src="/images/profile_user.png" crossorigin)
        .videoBlock__thumbnail__main
          h4.videoBlock__title #{video.title}
          h5 #{video.user.name}
          .videoBlock__thumbnail__viewDate
            if true
              h6.videoBlock__views 조회수 1 
            else if false
              h6.videoBlock__views 조회수 0
            else 
              h6.videoBlock__views 조회수
            em •
            h6 #{new Date(video.createdAt).toISOString().substring(0,10)}