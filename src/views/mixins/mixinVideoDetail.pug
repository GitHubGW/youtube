mixin mixinVideoDetail(video)
  .videoDetail
    .videoDetail__video
      a(href=`/videos/${video._id}`)
        video(id="jsThumbnailVideo" src=`/${video.videoUrl}` poster=`/${video.thumbnailUrl}` controls=false muted="muted" crossorigin)
    .videoDetail__content
      a(href=`/videos/${video._id}`)
        h4.videoDetail__title #{video.title}

      .videoDetail__creator 
        a(href=`/users/${video.user._id}`)
          h5 #{video.user.username}

      .videoDetail__viewDate
        if true
          h6.videoDetail__views 조회수 1 
        else if true
          h6.videoDetail__views 조회수 0
        else 
          h6.videoDetail__views 조회수
        em •
        h6 #{new Date(video.createdAt).toLocaleDateString("ko-KR")}